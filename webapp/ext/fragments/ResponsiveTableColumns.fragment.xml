<core:FragmentDefinition xmlns:core="sap.ui.core"
	xmlns="sap.m">
	<!--Column 1 Header-->
	<Column id="textColumn" hAlign="Center" width="6rem">
		<Text text="{i18n>Comments}" />
		<customData>
			<core:CustomData key="p13nData"
				value='\{"columnKey": "CustomColumn1", "leadingProperty":"CommentStatus", "columnIndex" : "5"}' />
		</customData>
	</Column>
	<Column id="textColumn1" hAlign="Center" width="6rem" demandPopin="true" minScreenWidth="small"  >
		<Text text="{i18n>AddToCreditRequest}" wrapping="true"/>
		<customData>
			<core:CustomData key="p13nData"
				value='\{"columnKey": "CustomColumn2", "leadingProperty":"ItemNo", "columnIndex" : "0"}' />
		</customData>
	</Column>    
</core:FragmentDefinition>